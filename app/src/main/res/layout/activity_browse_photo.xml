<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootcontentBrowsePhoto"
    tools:context="com.example.captionit.TakePhoto">


    <ImageView
        android:id="@+id/imageView_browseImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/image_border"
        app:srcCompat="@mipmap/ic_launcher" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#364046"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_browseResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textSize="20sp"
            android:background="#364046"
            android:textColor="#ffffff"
            android:text=""
            android:layout_marginBottom="1dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingTop="15dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="5"
                android:onClick="speakAgain"
                android:paddingTop="10dp"
                android:src="@drawable/speakcaption" />


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/shareimage"
                android:onClick="shareImage"
                android:id="@+id/shareButton"/>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>

